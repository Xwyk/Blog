{% set mainTitle = 'Interface d\'administration' %}
{% extends "template.twig" %}
{% block preBody %}
    <link href="plugins/datatables/datatables/media/css/dataTables.bootstrap4.min.css" rel="stylesheet">
    {# <link href="plugins/datatables/datatables/media/css/jquery.dataTables.min.css" rel="stylesheet"> #}
    <link href="themes/freelancer 4.5/css/signin.css" rel="stylesheet" />
{% endblock %}
{% block content %}
<div class="text-center padding" cz-shortcut-listen="true">
    <div class="container" cz-shortcut-listen="true">
        <h1>{{ mainTitle }}</h1>
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
              <li class="nav-item">
                <a class="nav-link active" data-toggle="pill" href="#commentsManagement" role="tab" aria-selected="true">Gestion des commentaires</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" data-toggle="pill" href="#postsManagement" role="tab" aria-selected="false">Gestion des articles</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/?action=addPost" aria-selected="false">Ajouter un article</a>
              </li>
            </ul>
            <div class="tab-content">
                <div id="commentsManagement" class="tab-pane fade show active" role="tabpanel">
                    <table class="table table-striped table-bordered table-sm dtOrderExample" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th class="th-sm text-center ">Pseudo</th>
                                <th class="th-sm text-center ">Contenu</th>
                                <th class="th-sm text-center ">Date d'ajout</th>
                                <th class="th-sm text-center ">Visibilité</th>
                                <th class="th-sm text-center ">Lien vers l'article</th>
                                <th class="th-sm text-center ">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for comment in comments %}
                            <tr>
                                <td>{{ comment.getAuthor.getPseudo }}</td>
                                <td>{{ comment.getContent }}</td>
                                <td>{{ comment.getCreationDate.format('Y-m-d H:i') }}</td>
                                <td><i class="fa fa-eye{{ comment.isValid?"":"-slash"}}" aria-hidden="true"></i></td>
                                <td>
                                    <a href="/?action=post&id={{ comment.getPostId }}">Lien</a>
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-secondary dropdown-toggle" type="button" id="actionMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Action</button>
                                        <div class="dropdown-menu" aria-labelledby="actionMenuButton">
                                    {% if comment.isValid %}
                                            <a class="dropdown-item">
                                                <form class="form-comment" action="/?action=invalidateComment&id={{ comment.getId }}"  method="post">
                                                    <input type="hidden" name="token" value="<?= $token ?>">
                                                    <button class="btn btn-warning btn-block" type="submit">Masquer</button>
                                                </form>
                                            </a>
                                    {% else %}
                                            <a class="dropdown-item">
                                                <form class="form-comment" action="/?action=validateComment&id={{ comment.getId }}"    method="post">
                                                    <input type="hidden" name="token" value="<?= $token ?>">
                                                    <button class="btn btn-success btn-block" type="submit">Valider</button>
                                                </form>
                                            </a>
                                    {% endif %}
                                            <a class="dropdown-item">
                                                <form class="form-comment" action="/?action=removeComment&id={{ comment.getId }}"    method="post">
                                                    <input type="hidden" name="token" value="<?= $token ?>">
                                                    <button class="btn btn-danger btn-block" type="submit">Supprimer</button>
                                                </form>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Pseudo</th>
                                <th>Contenu</th>
                                <th>Date d'ajout</th>
                                <th>Visibilité</th>
                                <th>Lien vers l'article</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <div id="postsManagement" class="tab-pane fade" role="tabpanel">
                    <table class="table table-striped table-bordered table-sm dtOrderExample" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th class="th-sm text-center ">Titre</th>
                                <th class="th-sm text-center ">Auteur</th>
                                <th class="th-sm text-center ">Date d'ajout</th>
                                <th class="th-sm text-center ">Date de modification</th>
                                <th class="th-sm text-center ">Lien vers l'article</th>
                                <th class="th-sm text-center ">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for post in posts %}
                            <tr>
                                <td>{{ post.getTitle }}</td>
                                <td>{{ post.getAuthor.getPseudo }}</td>
                                <td>{{ post.getCreationDate.format('Y-m-d H:i') }}</td>
                                <td>{{ post.getModificationDate.format('Y-m-d H:i') }}</td>
                                <td>
                                    <a href="/?action=post&id={{ post.getId }}">Lien</a>
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-secondary dropdown-toggle" type="button" id="actionMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Action</button>
                                        <div class="dropdown-menu" aria-labelledby="actionMenuButton">
                                            <a class="dropdown-item">
                                                <form class="form-comment removePost" action="/?action=removePost&id={{ post.getId }}"    method="post">
                                                    <input type="hidden" name="token" value="<?= $token ?>">
                                                    <button class="btn btn-danger btn-block" type="submit" >Supprimer</button>
                                                </form>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Titre</th>
                                <th>Auteur</th>
                                <th>Date d'ajout</th>
                                <th>Date de modification</th>
                                <th>Lien vers l'article</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block postBody %}
    <script src="plugins/datatables/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="plugins/datatables/datatables/media/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript">
        $(".dtOrderExample").DataTable(
            {   
                "columnDefs": [
                    {
                        "orderable": false, 
                        "targets": [4,5] 
                    }
                ],
                "order":[
                    [ 2, "desc" ]
                ],
                "language": {
                    "decimal":        "",
                    "emptyTable":     "Aucune donnée",
                    "info":           "Affichage de _START_ à _END_ sur _TOTAL_ lignes",
                    "infoEmpty":      "Aucune entrée dans la table",
                    "infoFiltered":   "(Filtré sur _MAX_ lignes totales)",
                    "infoPostFix":    "",
                    "thousands":      "",
                    "lengthMenu":     "Afficher _MENU_ lignes",
                    "loadingRecords": "Chargement...",
                    "processing":     "traitement...",
                    "search":         "Rechercher:",
                    "zeroRecords":    "Aucun résultat",
                    "paginate": {
                        "first":      "Premier",
                        "last":       "Dernier",
                        "next":       "Suivant",
                        "previous":   "Précédent"
                    },
                    "aria": {
                        "sortAscending":  ": Activer pour trier par ordre croissant",
                        "sortDescending": ": Activer pour trier par ordre décroissant"
                    }
                }
            }
            );
        $(".dataTables_length").addClass("bs-select");

        $(".removePost").submit(function(event){
            event.preventDefault();
            $.ajax({
                type: "POST",
                url: "/index.php",
                data: "action=removePost&id={{ post.getId }}",
                success : function(data){
                    alert(data);
                }
            });
        });
    </script> 
{% endblock %}
